<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Share Note"
        android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
        android:layout_marginBottom="16dp" />

    <!-- Using OutlinedButton style for better visual separation -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_share_copy_link"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="8dp"
        android:text="Copy Link"
        android:textSize="16sp"
        android:textColor="@color/primary"
        app:strokeColor="@color/border"
        app:cornerRadius="8dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_share_pdf"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="8dp"
        android:text="Share as PDF"
        android:textSize="16sp"
        android:textColor="@color/primary"
        app:strokeColor="@color/border"
        app:cornerRadius="8dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_share_text"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Share as Text"
        android:textSize="16sp"
        android:textColor="@color/primary"
        app:strokeColor="@color/border"
        app:cornerRadius="8dp" />

</LinearLayout>