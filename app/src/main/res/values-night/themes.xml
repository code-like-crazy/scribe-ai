<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme (Dark). -->
    <style name="Base.Theme.ScribeAI" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_primary</item>
        <item name="colorPrimaryVariant">@color/dark_primary</item> <!-- Adjust if needed -->
        <item name="colorOnPrimary">@color/dark_primary_foreground</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_secondary</item>
        <item name="colorSecondaryVariant">@color/dark_secondary</item> <!-- Adjust if needed -->
        <item name="colorOnSecondary">@color/dark_secondary_foreground</item>
        <!-- Accent color. -->
        <item name="colorAccent">@color/dark_accent</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/dark_background</item>
        <item name="android:windowLightStatusBar">false</item>        <!-- Make status bar icons light -->
        <!-- Background color. -->
        <item name="android:colorBackground">@color/dark_background</item>
        <item name="colorOnBackground">@color/dark_foreground</item>
        <!-- Surface color (cards, sheets, menus) -->
        <item name="colorSurface">@color/dark_card</item>
        <item name="colorOnSurface">@color/dark_card_foreground</item>
        <!-- Error color -->
        <item name="colorError">@color/dark_destructive</item>
        <item name="colorOnError">@color/dark_destructive_foreground</item>

        <!-- Set default font family -->
        <item name="android:fontFamily">@font/funnel_display</item>
        <item name="fontFamily">@font/funnel_display</item> <!-- For Material Components -->

        <!-- Apply custom button styles (inherits from light theme definition) -->
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
        <!-- Explicitly reference the outlined style for clarity, though it might inherit -->
        <item name="materialButtonOutlinedStyle">@style/Widget.App.Button.Outlined</item>
    </style>

    <!-- Theme.ScribeAI inherits Base.Theme.ScribeAI implicitly via DayNight parent -->
    <!-- Note: Widget.App.Button.Outlined defined in values/themes.xml will be used, -->
    <!-- but its colors (@color/border, @color/primary) will resolve to dark theme values -->

    <!-- AppBar Theme (Dark) - Usually inherits from Dark.ActionBar -->
    <style name="Theme.ScribeAI.AppBarOverlay" parent="ThemeOverlay.Material3.Dark.ActionBar" />

    <!-- Popup Theme (Dark) - Usually inherits from Material3.Dark -->
    <style name="Theme.ScribeAI.PopupOverlay" parent="ThemeOverlay.Material3.Dark" />

</resources>